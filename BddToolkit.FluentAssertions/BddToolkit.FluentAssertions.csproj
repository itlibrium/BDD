<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Marcin Markowski</Authors>
    <Company>ITLIBRIUM</Company>
    <Description>FluentAssertions extensions for BDD-toolkit-dotnet</Description>
    <AssemblyVersion>2.2.1</AssemblyVersion>
    <FileVersion>2.2.1</FileVersion>
    <PackageVersion>2.2.1</PackageVersion>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/itlibrium/BDD-toolkit-dotnet</PackageProjectUrl>
    <RepositoryUrl>https://github.com/itlibrium/BDD-toolkit-dotnet</RepositoryUrl>
    <PackageTags>BDD, TDD, tests, FluentAssertions, .net core</PackageTags>
    <AssemblyName>ITLIBRIUM.BddToolkit.FluentAssertions</AssemblyName>
    <RootNamespace>ITLIBRIUM.BddToolkit.FluentAssertions</RootNamespace>
    <LangVersion>latest</LangVersion>
    <PackageId>BDD-toolkit-dotnet.FluentAssertions</PackageId>
    <Product>BDD-toolkit-dotnet</Product>    
    <PackageReleaseNotes>Fix for scenarios when exception in When action is expected but no exception was thrown</PackageReleaseNotes>
    <Title>BDD-toolkit-dotnet.FluentAssertions</Title>
    <Copyright>ITLIBRIUM</Copyright>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="FluentAssertions" Version="5.10.3" />
    <PackageReference Include="JetBrains.Annotations" Version="2020.1.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\BddToolkit\BddToolkit.csproj" />
  </ItemGroup>
</Project>